<h1>Books</h1>

<% @books.each do |book| %>
<table width = "800">
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
    </tr>
    <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show',show_book_path(book.id)%><%= link_to 'Edit',edit_book_path(book.id)%><%= link_to 'destroy',show_book_path(book.id), method: :delete, "data-confirm" => "Are you sure" %></td>
    </tr>
</table>
<% end %>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
    <h1>New Book</h1>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit '投稿' %>
<% end %>

